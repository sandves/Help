<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#CC0000"
                android:endColor="#FF4444"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@android:color/darker_gray" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#FF8800"
                android:startColor="#FFBB33"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@android:color/darker_gray" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#CC0000"
                android:startColor="#FF4444"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@android:color/darker_gray" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="20dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>